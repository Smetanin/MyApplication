<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <ru.yandex.yandexmapkit.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:apiKey="ETMrqNCPIj5vBrqXGsZjFlYf5twFHq7j-TpsUWdf3Zi79asE3vyJW1bJ2t5EAPVc8LeuyEhlqNNem-FfllI7-Pr-1McP~fvBH4Hm5kTpeA0="
        android:layout_above="@+id/tableLayout1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                style="?android:attr/borderlessButtonStyle"

                android:text="Wish-лист"
                android:textSize="8sp"
                android:background="#000000"
                android:textColor="@color/text_color"
                android:drawableTop="@drawable/ic_list_white_24dp"
                android:id="@+id/button1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="Карта"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="8sp"
                android:background="#000000"
                android:textColor="@color/text_color"
                android:drawableTop="@drawable/ic_place_white_24dp"
                android:id="@+id/button2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="Товары"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="8sp"
                android:background="#000000"
                android:textColor="@color/text_color"
                android:drawableTop="@drawable/ic_shopping_basket_white_24dp"
                android:id="@+id/button3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="Поиск"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="8sp"
                android:background="#000000"
                android:textColor="@color/text_color"
                android:drawableTop="@drawable/ic_search_white_24dp"
                android:id="@+id/button4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="Избранное"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="8sp"
                android:background="#000000"
                android:textColor="@color/text_color"
                android:drawableTop="@drawable/ic_star_rate_white_24dp"
                android:id="@+id/button5" />
        </TableRow>
    </TableLayout>


</RelativeLayout>
